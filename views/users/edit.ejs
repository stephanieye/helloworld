<% if(locals.isLoggedIn) {%>
<div class="container solid">
<h2>Edit your profile</h2>


<form method="POST" action="/users/<%= user._id %>">
  <input type="hidden" name="_method" value="PUT">


  <div class="input-field col l12">
    <input type="text" name="username" id="username_field" value='<%=user.username%>' required>
    <label for="username_field">Your name</label>
  </div>
  <div class="input-field col l12">
    <input type="email" name="email" id="email_field" value='<%=user.email%>' required>
    <label for="email_field">Email</label>
  </div>
  <div class="input-field col l12">
    <input type="text" name="url" id="url_field" value='<%=user.url%>'>
    <label for="email_field">Image URL (optional)</label>
  </div>
  <div class="input-field col l12">
    <input type="password" name="password" id="password_field" required>
    <label for="password_field">Password</label>
  </div>
  <div class="input-field col l12">
    <input type="password" name="passwordConfirmation" id="passwordcon_field" required >
    <label for="passwordcon_field">Enter your password again</label>
  </div>
  <div class = 'row'>
    <div class = 'col s12'>
      <div class= 'col s5 left-align'>

          <button class="waves-effect waves-light btn" id='curtain'>Update account</button>

      </form>
    </div>
    <div class= 'col s7 right-align'>
      <form method="POST" action="/users/<%= user._id %>">
        <input type="hidden" name="_method" value="DELETE">
        <%console.log(user._id)%>
        <button class="waves-effect waves-light red btn">Delete account</button>
      </form>
    </div>
  </div>
</div>
</div>
<%}%>
